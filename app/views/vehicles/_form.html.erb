<%= simple_form_for(@vehicle) do |f| %> 
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@vehicle.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @vehicle.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :brand %></br>
    <%= f.text_field :brand  %>
  </div>

  <div class="field">
    <%= f.label :model %></br>
    <%= f.text_field :model  %>
  </div>

  <div class="field">
    <%= f.input :year, :input_html => { :wrap => :soft, :rows => 2}, :label => 'Year: ', :label_html => { :class => 'type' } %>
  </div>

  <div class="field">
    <%= f.input :power, :input_html => { :wrap => :soft, :rows => 2}, :label => 'Power: ', :label_html => { :class => 'type' } %>
  </div>

  <div class="field">
    <%= f.label :description %></br>
    <%= f.text_area :description  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>